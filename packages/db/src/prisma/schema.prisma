generator client {
  provider = "prisma-client-js"
  output   = "./src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TradeType {
  BUY
  SELL
}

enum Asset {
  BTC
  ETH
  SOL
}

model User {
  id String @id @default(uuid())
  email String
  lastLoggedIn DateTime?
  existingTrades ExistingTrade[] 
}

model ExistingTrade {
  id String @id @default(uuid())
  closePrice Float
  openPrice Float
  type TradeType
  margin Int
  leverage Float
  quantity Float
  pnl Float
  asset Asset
  liquidated Boolean @default(false)
  user User @relation(fields: [userId], references: [id])
  userId String
  createdAt DateTime @default(now())
}
